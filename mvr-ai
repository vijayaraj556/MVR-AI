    <script>
        const chatMessages = document.getElementById('chatMessages');
        const chatInput = document.getElementById('chatInput');
        const sendButton = document.getElementById('sendButton');
        const typingIndicator = document.getElementById('typingIndicator');

        const aiResponses = [
            "That's a great question! Let me help you with that. Based on what you're asking, I'd suggest considering multiple approaches to get the best results.",
            "I understand what you're looking for. Here's my take on this topic, and I think you'll find this perspective helpful for your situation.",
            "Excellent point! This is actually a common challenge many people face. Let me break this down into manageable steps for you.",
            "I'm glad you asked about this! This is an area where I can definitely provide some valuable insights and practical suggestions.",
            "That's an interesting way to think about it. From my analysis, there are several factors we should consider to give you the most accurate answer.",
            "Perfect timing for this question! I've been processing a lot of information about this topic, and I have some great recommendations for you.",
            "I love helping with questions like this! Based on current best practices and proven methods, here's what I'd recommend for your specific case."
        ];

        function addMessage(content, isUser = false) {
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${isUser ? 'user' : 'ai'}`;
            
            messageDiv.innerHTML = `
                <div class="message-avatar">${isUser ? 'You' : 'AI'}</div>
                <div class="message-content">${content}</div>
            `;
            
            chatMessages.appendChild(messageDiv);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        function showTyping() {
            typingIndicator.style.display = 'flex';
            chatMessages.appendChild(typingIndicator);
            chatMessages.scrollTop = chatMessages.scrollHeight;
        }

        function hideTyping() {
            typingIndicator.style.display = 'none';
        }

        function sendMessage() {
            const message = chatInput.value.trim();
            if (!message) return;

            addMessage(message, true);
            chatInput.value = '';

            showTyping();

            setTimeout(() => {
                hideTyping();
                const randomResponse = aiResponses[Math.floor(Math.random() * aiResponses.length)];
                addMessage(randomResponse);
            }, 1500 + Math.random() * 1000);
        }

        sendButton.addEventListener('click', sendMessage);
        
        chatInput.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') {
                sendMessage();
            }
        });

        chatInput.addEventListener('input', () => {
            sendButton.style.background = chatInput.value.trim() ? 
                'linear-gradient(135deg, #4f46e5, #7c3aed)' : 
                'linear-gradient(135deg, #94a3b8, #64748b)';
        });

        // Auto-focus on input
        chatInput.focus();
    </script>
